general {
        #colors = true
        colors = false
        interval = 5
}

# order += "ipv6"
order += "cpu_usage"
order += "wireless _first_"
order += "ethernet _first_"
#order += "battery 1"
# order += "disk /"
#order += "load"
#order += "cpu_usage"
order += "memory"
order += "tztime local"
order += "volume master"

cpu_usage {
	format = ""
	#degraded_threshold = "OH NO: %usage"
	max_threshold = 20
	format_above_threshold = "C: %usage"
}

wireless _first_ {
        format_up = "W: %ip"
        #format_down = "W: -"
        format_down = ""
}

ethernet _first_ {
        format_up = "E: %ip"
        #format_down = "E: -"
        format_down = ""
}

battery all {
	format_down = "No Battery"
        format = "%status %percentage %remaining"
}

#disk "/" {
#        format = "%avail"
#}

#load {
#        format = "%1min"
#}

memory {
        format = "%used used"
        threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
}

volume master {
        #format = "ðŸ”ˆ: %volume"
        format = "V: %volume"
	format_muted = "M: %volume"
        #format_muted = "ðŸ”‡: %volume"
        device = "pulse"
}

tztime local {
        format = "%Y-%m-%d %H:%M"
}
